<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nittcprocon.glathlete.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="この端末のIPアドレス"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ipAddrTextView"
            android:textSize="36sp"
            android:text="確認中..."
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />

        <TextView
            android:text="ストリームURI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ipAddrTextView"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="rtsp://192.168.0.120:8554/test"
            android:ems="10"
            android:id="@+id/uriEditText"
            android:textSize="18sp"
            android:textAlignment="center" />

        <Button
            android:text="開始"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startButton" />

        <Button
            android:text="Debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startDebugButton" />

    </LinearLayout>

</RelativeLayout>
