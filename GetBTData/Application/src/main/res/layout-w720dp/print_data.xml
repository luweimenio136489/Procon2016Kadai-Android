<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Sensor Value."
        android:id="@+id/text_value"
        android:textSize="20sp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Sensor Value."
        android:id="@+id/value2"
        android:textSize="20sp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/text_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="roll"
        android:id="@+id/roll"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/value2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="pitch"
        android:id="@+id/pitch"
       android:layout_marginTop="28dp"
        android:layout_below="@+id/roll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="azimuth"
        android:id="@+id/azimuth"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/pitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EulerRad"
        android:id="@+id/euler"
        android:layout_below="@+id/azimuth"
        android:layout_marginTop="27dp" />
</RelativeLayout>
