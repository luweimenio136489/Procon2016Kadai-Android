<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tukitan.dataTrance.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Address"
        android:id="@+id/add"/>

    <EditText
        android:id="@+id/addressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="192.168.10.2"
        android:layout_below="@+id/add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/por"
        android:layout_below="@+id/addressTxt"/>

    <EditText
        android:id="@+id/portTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="10000"
        android:layout_below="@+id/por"/>
    <Button
        android:id="@+id/initButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@android:drawable/ic_menu_slideshow"
        android:layout_below="@+id/portTxt"
        android:text="@string/set_videoMode" />

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/initButton"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/initButton"
        android:layout_toRightOf="@+id/initButton">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送信開始"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送信終了"
            android:gravity="center"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/genzai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="現在の状態：未初期化"
        android:textSize="30dp"
        android:layout_below="@+id/layout"/>



</RelativeLayout>
